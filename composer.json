{
    "name": "asociaciondag/flarum-subscriptions",
    "description": "Fork of the original flarum/subscriptions extension including the option to follow every new discussion automatically.",
    "type": "flarum-extension",
    "keywords": ["discussion"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/asociaciondag/subscriptions/issues",
        "source": "https://github.com/asociaciondag/subscriptions"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.13",
        "flarum/subscriptions": "^0.1.0-beta.13"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\Subscriptions\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Subscriptions (Follow new discussions)",
            "icon": {
                "name": "fas fa-star",
                "backgroundColor": "#ffea7b",
                "color": "#de8e00"
            }
        }
    }
}
